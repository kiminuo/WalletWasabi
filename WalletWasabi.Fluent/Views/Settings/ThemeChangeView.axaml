<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:settings="using:WalletWasabi.Fluent.ViewModels.Settings"
             mc:Ignorable="d" d:DesignWidth="428" d:DesignHeight="371"
             x:DataType="settings:ThemeChangeViewModel"
             x:CompileBindings="True"
             x:Class="WalletWasabi.Fluent.Views.Settings.ThemeChangeView">
  <DockPanel VerticalAlignment="Center" Margin="40">
    <TextBlock Text="Wasabi is changing theme..."
               FontSize="20"
               FontWeight="ExtraLight"
               DockPanel.Dock="Bottom"
               Margin="10 20 10 0"
               TextAlignment="Center"
               TextWrapping="Wrap" />
    <Viewbox MaxHeight="200">
      <ContentControl Template="{DynamicResource wasabi_logo_dynamic}"
                      OpacityMask="{StaticResource LogoWashoutOpacityMaskGradient}" />
    </Viewbox>
  </DockPanel>
</UserControl>